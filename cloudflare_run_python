from tkinter import *
import os
import time
from pystray import Menu, MenuItem
import pystray

def cloudflare1():
url = input("Введите URL: ")
os.system(
'start cmd /c cloudflared access rdp --hostname "{}" --url rdp://localhost:1111'.format(url))
time.sleep(4)
os.system('start cmd /c mstsc /v:localhost:1111')

def on_quit():
tray.icon = None
root.quit()

menu = Menu(MenuItem('Cloudflare 1', cloudflare1),
MenuItem('Quit', on_quit))

image = Image.open("icon.png")
image.show()
tray = pystray.Icon("name", image, "title", menu)
tray.run()
root = Tk()
root.mainloop()
